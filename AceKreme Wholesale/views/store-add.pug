extends layout.pug

block content
  h2 Add New Store Location

  form(action='/admin/stores/add', method='POST')
    label(for='name') Store Name:
    input(type='text', id='name', name='name', required)

    label(for='address') Address:
    input(type='text', id='address', name='address', required)

    label(for='city') City:
    input(type='text', id='city', name='city', required)

    label(for='province') Province:
    input(type='text', id='province', name='province', required)

    label(for='postalCode') Postal Code:
    input(type='text', id='postalCode', name='postalCode', required)

    label(for='contactPhone') Contact Phone:
    input(type='text', id='contactPhone', name='contactPhone')

    label(for='managerName') Manager Name:
    input(type='text', id='managerName', name='managerName')

    label(for='openingHours') Opening Hours:
    input(type='text', id='openingHours', name='openingHours', value='9 AM - 5 PM')

    button(type='submit') Add Store
    a(href='/admin/stores', class='button-link cancel-button') Cancel